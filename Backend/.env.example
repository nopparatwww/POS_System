# Backend environment variables
PORT=3000
# For production, set this to your actual Mongo connection string.
# Local dev example:
MONGO_URI=mongodb://127.0.0.1:27017/pos_system
JWT_SECRET=REPLACE_WITH_STRONG_RANDOM_HEX
JWT_EXPIRES_IN=1h
BCRYPT_ROUNDS=12
# Optional additional secret added to passwords before hashing. Keep empty or set in secret manager.
PASSWORD_PEPPER=
# Optional default admin passwords for seeding scripts
ADMIN_DEFAULT_PASS=123456
ADMIN2_DEFAULT_PASS=123456

# Stripe (required if using payments)
# Obtain from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=
